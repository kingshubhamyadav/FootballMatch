@model Assignment_1_Football_MVC.Context.FootballLeague
@{
    ViewBag.Title = "Football";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Football</title>

    <style>
        .container {
            background-color: #34eb8f;
        }
    </style>
</head>
<body>

    @using (Html.BeginForm("AddDetails", "Football", FormMethod.Post))
    {
        <div class="container">
            <div class="form-group">
                <label>Match ID</label>
                @Html.TextBoxFor(x => x.MatchId, new { @class = "form-control" })
            </div>
        </div>

        <div class="container">
            <div class="form-group">
                <label>Team Name-1</label>
                @Html.TextBoxFor(x => x.TeamName1, new { @class = "form-control" })
            </div>
        </div>

        <div class="container">
            <div class="form-group">
                <label>Team Name-2</label>
                @Html.TextBoxFor(x => x.TeamName2, new { @class = "form-control" })
            </div>
        </div>
        @*<div class="container">
                <div class="form-group">
                    <label>Match Status</label>
                    @Html.TextBoxFor(x => x.Status, new { @class = "form-control" })
                </div>
            </div>*@
        <div class="container">
            <div class="form-group">
                <label for="cars">Match Status</label>

                <select name="Status" id="Status" class="form-group">
                    <option value="Win">Win</option>
                    <option value="Draw">Draw</option>
                </select>
            </div>
        </div>

        <div class="container">
            <div class="form-group">
                <label>Winning Team</label>
                @Html.TextBoxFor(x => x.WinningTeam, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <button type="submit">Save Match Data</button>
        </div>

    }

</body>
</html>
